<Application
    x:Class="Task_Time_Counter_2.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Task_Time_Counter_2">

    <Application.Resources>

        <!-- Colors -->
        <Color x:Key="windowBarColor">#FF232323</Color>

        <!-- Task brushes -->
        <AcrylicBrush x:Key="taskBrush" TintColor="#FF232323" TintOpacity="0.75" BackgroundSource="HostBackdrop" FallbackColor="#FF232323"/>
        <AcrylicBrush x:Key="taskFocusBrush" TintColor="#FF595959" TintOpacity="0.75" BackgroundSource="HostBackdrop" FallbackColor="#FF595959"/>
        <Color x:Key="taskHighlightColor">#60FFFFFF</Color>

    </Application.Resources>

</Application>
